# Reaction test
# 
subr wait
  clear
  color 733
  text "WAIT"
  timer 1 + 2 * randomf
end
on timer
  clear
  color 373
  text "PRESS"
  time0 = systime
end
on mouse_down
  if time0 <> 0
    clear
    color 555
    text systime - time0
    time0 = 0
  else
    wait
  end
end
textsize 20
move 20 50
wait

